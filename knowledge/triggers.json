{
  "automatic_triggers": [
    {
      "condition": "file_size > 500 lines",
      "action": "delegate_to_gemini",
      "mandatory": true
    },
    {
      "condition": "project_type == \"mobile\"",
      "action": "start_with_mobile_ux_engineer",
      "reason": "UX structure must come before styling"
    },
    {
      "condition": "production_deployment",
      "action": "require_governance_approval",
      "mandatory": true
    }
  ],
  "slash_commands": [
    {
      "command": "/maintenance",
      "description": "Complete system maintenance workflow",
      "agent": "maintenance-orchestrator",
      "example": "/maintenance - Executes comprehensive system maintenance (30-60 min, $2-4)",
      "category": "system"
    },
    {
      "command": "/visual-testing",
      "description": "Trigger comprehensive visual testing workflow",
      "agent": "visual-testing-orchestrator", 
      "example": "/visual-testing - Sets up complete visual testing with real auth and production-like data",
      "category": "testing"
    }
  ]
}